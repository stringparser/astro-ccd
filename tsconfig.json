{
  "include": [
    "./src",
    "./bin"
  ],
  "exclude": [
    "node_modules",
    "next.config.js"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "module": "commonjs",
    "noEmit": true,
    "target": "es5",
    "strict": false,
    "allowJs": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}