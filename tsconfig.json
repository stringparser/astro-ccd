{
  "include": [
    "src",
    "bin",
    "public"
  ],
  "exclude": [
    "node_modules",
    "next.config.js"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "paths": {
      "bin/*": [
        "./bin/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "public/*": [
        "./public/*"
      ],
    },
    "module": "commonjs",
    "noEmit": true,
    "target": "es5",
    "strict": false,
    "baseUrl": ".",
    "allowJs": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}