{
  "name": "astro-ccd",
  "version": "1.0.0",
  "description": "A very simple example of Next.js-based website with Jest tests, all written in TypeScript",
  "scripts": {
    "test": "jest",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "fetch:data": "ts-node ./bin/fetch.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stringparser/astro-ccd.git"
  },
  "author": "Jun Kato",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stringparser/astro-ccd/issues"
  },
  "homepage": "https://github.com/stringparser/astro-ccd#readme",
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.0.4",
    "next": "^9.5.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.13",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "cheerio": "^1.0.0-rc.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "fs-extra": "^9.0.1",
    "jest": "^26.4.2",
    "node-fetch": "^2.6.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    }
  }
}
